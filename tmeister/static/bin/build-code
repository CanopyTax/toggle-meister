#!/bin/bash -e
./node_modules/jspm/jspm.js bundle \
	sofe \
	build/bundled-deps.js \
	--source-map-contents

./node_modules/jspm/jspm.js build toggle-meister \
	- toast-service!sofe \
	- canopy-styleguide!sofe \
	- sofe \
	build/toggle-meister.js \
	--format amd \
	--skip-rollup \
	--source-map-contents \
	"$@"
