#!/bin/bash -e
cp stylesheet.css build/stylesheet.css

./node_modules/jspm/jspm.js bundle \
  react \
  + react-dom \
  + prop-types \
  + jquery \
  + rx \
  + rxjs \
  + rxjs/operators \
  build/bundled-deps.js \
  --source-map-contents

./node_modules/jspm/jspm.js build toggle-meister \
  - react \
  - react-dom \
  - prop-types \
  - jquery \
  build/toggle-meister.js \
  --format amd \
  --skip-rollup \
  --source-map-contents \
  "$@"
